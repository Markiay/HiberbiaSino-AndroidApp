<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".RegisterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_action_arrow_left_gray" />

        <TextView
            android:id="@+id/tv_registerActivity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:text="@string/register_title" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/TextInputLayout_Reg1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:counterEnabled="true"
                    app:counterMaxLength="15"
                    app:counterOverflowTextAppearance="@style/counterOverFlowAppearance"
                    app:counterTextAppearance="@style/counterAppearance"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/errorAppearance"
                    app:hintTextAppearance="@style/text_input_layout">

                    <EditText
                        android:id="@+id/et_register_username"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/register_username"
                        android:inputType="textPersonName" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/TextInputLayout_Reg2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:counterEnabled="true"
                    app:counterMaxLength="16"
                    app:counterOverflowTextAppearance="@style/counterOverFlowAppearance"
                    app:counterTextAppearance="@style/counterAppearance"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/errorAppearance"
                    app:hintTextAppearance="@style/text_input_layout"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/et_register_password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/register_password"
                        android:inputType="textPassword" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/TextInputLayout_Reg3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:counterEnabled="true"
                    app:counterMaxLength="16"
                    app:counterOverflowTextAppearance="@style/counterOverFlowAppearance"
                    app:counterTextAppearance="@style/counterAppearance"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/errorAppearance"
                    app:hintTextAppearance="@style/text_input_layout"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/et_register_password_again"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/register_password2"
                        android:inputType="textPassword" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/TextInputLayout_Reg4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:counterEnabled="true"
                    app:counterMaxLength="4"
                    app:counterOverflowTextAppearance="@style/counterOverFlowAppearance"
                    app:counterTextAppearance="@style/counterAppearance"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/errorAppearance"
                    app:hintTextAppearance="@style/text_input_layout">

                    <EditText
                        android:id="@+id/et_register_verification"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/register_verification"
                        android:inputType="textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/iv_Verification"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="2.5"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_action_tablet" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_registerActivity_register"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape"
                    android:textColor="#FFFFFF"
                    android:text="@string/register_complete" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_registerActivity6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:text="@string/register_warn" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>